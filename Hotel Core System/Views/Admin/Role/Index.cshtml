@using Microsoft.AspNetCore.Identity;
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<IdentityRole>


<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Roles</a></li>
        <li class="breadcrumb-item active" aria-current="page">View all Roles</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">Current Roles</h6>
                <p class="card-description">View all roles in the system</p>
                <div class="table-responsive">
                    <table id="dataTableExample" class="table">
                        <thead>
                            <tr>
                                <th>Ref</th>
                                <th>Role Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() <= 0)
                            {
                                <tr>
                                    <td class="text-center" colspan="2"> No Room data</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var role in Model)
                                {
                                    <tr>
                                        <td>@role.Id</td>
                                        <td>@role.Name</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

