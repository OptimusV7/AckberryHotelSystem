@model IEnumerable<RoomFeature>
@{
    ViewData["Title"] = "Admin Room Features ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Rooms</a></li>
        <li class="breadcrumb-item active" aria-current="page">Room Features</li>
    </ol>
</nav>



<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">Current Room Features</h6>
                <p class="card-description">View all room features in the system</p>
                <div class="table-responsive">
                    <table id="dataTableExample" class="table">
                        <thead>
                            <tr>
                                <th>Feature ID</th>
                                <th>Feature Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() <= 0)
                            {
                                <tr>
                                    <td class="text-center" colspan="2"> No Features data</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var item in Model.Take(10))
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Feature_Name</td>
                                        <td>
                                            <button type="button" class="btn btn-primary btn-icon">
                                                <i data-feather="eye"></i>
                                            </button>
                                            <button type="button" class="btn btn-primary btn-icon">
                                                <i data-feather="edit"></i>
                                            </button>
                                            <button type="button" class="btn btn-danger btn-icon">
                                                <i data-feather="trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>









