@{
    ViewData["Title"] = "Admin Create Rooms";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Hotel_Core_System.Models.ViewModels.RoomVM

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Forms</a></li>
        <li class="breadcrumb-item active" aria-current="page">Basic Elements</li>
    </ol>
</nav>



<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">Create Rooms</h6>
                <form>
                    <div class="form-group">
                         @Html.LabelFor(model => model.RoomNumber)
                        <input type="text" asp-for="RoomNumber" class="form-control" placeholder="Enter Name">
                        <span asp-validation-for="RoomNumber" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                         @Html.LabelFor(model => model.RoomType)
                       <select id="roomTypeId" asp-items="@(new SelectList(ViewBag.RoomTypeList, "Id", "Type_name"))" class="form-control"></select>
                    </div>
                    
                    <div class="form-group">
                         @Html.LabelFor(model => model.BookingPrice)
                        <input type="number" asp-for="BookingPrice" class="form-control" placeholder="Enter Name">
                        <span asp-validation-for="BookingPrice" class="text-danger"></span>
                    </div>
                   
                    <div class="form-group">
                        <div class="form-check">
                            <label class="form-check-label">
                                <span asp-validation-for="IsSmokingAllowed" class="text-danger"></span>
                                <input type="checkbox" asp-for="IsSmokingAllowed" class="form-check-input">
                                @Html.LabelFor(model => model.IsSmokingAllowed)
                            </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                                <span asp-validation-for="IsRoomAvailable" class="text-danger"></span>
                                <input type="checkbox" asp-for="IsRoomAvailable"  class="form-check-input">
                                @Html.LabelFor(model => model.IsRoomAvailable)
                            </label>
                        </div>
                    </div>
                    
                   
                    <div class="form-group">
                        @Html.LabelFor(model => model.ImageFile)
                        <input type="file" name="img[]" class="file-upload-default">
                       <div class="input-group col-xs-12">
                            <form action="/file-upload" class="dropzone" id="exampleDropzone"></form>
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>
                    </div>
                    <button class="btn btn-primary" type="submit">Submit form</button>
                </form>
            </div>
        </div>
    </div>
</div>




