@{
    ViewData["Title"] = "All Rooms";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<Room>


<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Rooms</a></li>
        <li class="breadcrumb-item active" aria-current="page">View all Rooms</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">Current Rooms</h6>
                <p class="card-description">View all rooms in the system</p>
                <div class="table-responsive">
                    <table id="dataTableExample" class="table">
                        <thead>
                            <tr>
                                <th>RoomID</th>
                                <th>Room Number</th>
                                <th>Room Type</th>
                                <th>Booking Price</th>
                                <th>IsSmokingAllowed</th>
                                <th>IsRoomAvailable</th>
                                <th>Max Adult</th>
                                <th>Max Child</th>
                                <th>CheckIn</th>
                                <th>CheckOut</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() <= 0)
                            {
                                <tr>
                                    <td class="text-center" colspan="8"> No Room data</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.RoomId</td>
                                        <td>@item.RoomNumber</td>
                                        <td>@item.RoomTypeString</td>
                                        <td>@Convert.ToDecimal(@item.BookingPrice).ToString("#,##0.00")</td>
                                        <td>@item.IsSmokingAllowed</td>
                                        <td>@item.IsRoomAvailable</td>
                                        <td>@item.MaxAdult</td>
                                        <td>@item.MaxChild</td>
                                        <td>@item.CheckIn</td>
                                        <td>@item.CheckOut</td>
                                        <td>
                                            <button type="button" class="btn btn-primary btn-icon">
                                                <i data-feather="eye"></i>
                                            </button>
                                            <button type="button" class="btn btn-primary btn-icon">
                                                <i data-feather="edit"></i>
                                            </button>
                                            <button type="button" class="btn btn-danger btn-icon">
                                                <i data-feather="trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


